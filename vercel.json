{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "@vercel/php@0.7.0" 
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_KEY": "@app_key", 
        "CACHE_DRIVER": "file",
        "SESSION_DRIVER": "file",
        "QUEUE_CONNECTION": "sync"
    }
}
